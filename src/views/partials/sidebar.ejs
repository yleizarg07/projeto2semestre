<div class="card p-3 mb-3">
<h5>Usuários</h5>
<% if (usuarios && usuarios.length) { %>
<% usuarios.slice(0, 5).forEach(u => { %>
<div class="d-flex align-items-center mb-2">
<!-- Avatar padrão-->
<img src="/img/default.png" alt="avatar" width="40" class="rounded-circle me-2">
<a href="/usuarios?nomeUsuario=<%= u.nome_usuario %>"><%= u.nome %></a>
</div>
<% }) %>
<a href="/usuarios/" class="d-block mt-2">Ver tudo</a>
<% } else { %>
<p class="text-muted">Nenhum usuário cadastrado.</p>
<% } %>
</div>