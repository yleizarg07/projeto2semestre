<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="container">
    <h1>Novo Comentário</h1>

    <% if (error) { %>
        <p class="erro"><%= error %></p>
    <% } %>

    <form action="/comentario/criar" method="POST" class="formulario">
        <label>ID da Postagem:</label>
        <input type="number" name="idPost" required>

        <label>Conteúdo:</label>
        <textarea name="conteudo" rows="4" required></textarea>

        <button type="submit" class="btn-confirmar">Criar</button>
    </form>
</div>

<%- include('../partials/footer') %>

