<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="container mt-4" style="max-width: 700px;">

    <!-- Usu치rio logado -->
    <% if (usuarioLogado) { %>
        <div class="alert alert-primary">
            Logado como: <strong>@<%= usuarioLogado.nome_usuario %></strong>
        </div>
    <% } else { %>
        <div class="alert alert-secondary">
            <a href="/usuarios/login">Fa칞a login para postar e comentar</a>
        </div>
    <% } %>

    <!-- Criar novo post -->
    <% if (usuarioLogado) { %>
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Nova Postagem</h5>
                <form action="/posts/criar" method="POST">
                    <textarea name="conteudo" class="form-control mb-3" placeholder="O que est치 acontecendo?" maxlength="240" required></textarea>
                    <button class="btn btn-primary w-100">Postar</button>
                </form>
            </div>
        </div>
    <% } %>

    <!-- Timeline de posts -->
    <% posts.forEach(post => { %>

        <div class="card mb-4 shadow-sm post-card">

            <!-- Cabe칞alho do post -->
            <div class="card-body">

                <div class="d-flex align-items-center mb-2">
                    <img src="/img/default.png" class="rounded-circle me-2" width="45" height="45">
                    <div>
                        <strong>@<%= post.usuario.nome_usuario %></strong><br>
                        <small class="text-muted"><%= post.createdAt.toLocaleString() %></small>
                    </div>
                </div>

                <!-- Conte칰do -->
                <p class="mb-2"><%= post.conteudo %></p>

                <!-- 츼rea de a칞칫es -->
                <div class="d-flex justify-content-between">

                    <!-- Total de coment치rios -->
                    <span class="text-muted">
                        游눫 <%= post.comentarios.length %> coment치rios
                    </span>

                    <!-- Bot칚o mostrar coment치rio -->
                    <button class="btn btn-sm btn-outline-primary" onclick="toggleComentarios('<%= post.idPost %>')">
                        Ver coment치rios
                    </button>

                </div>

            </div>

            <!-- Se칞칚o de coment치rios (inicialmente escondida) -->
            <div id="comentarios-<%= post.idPost %>" class="p-3" style="display: none;">

                <!-- Adicionar coment치rio -->
                <% if (usuarioLogado) { %>
                    <form action="/comentarios/criar" method="POST" class="mb-3">
                        <input type="hidden" name="idPost" value="<%= post.idPost %>">
                        <textarea class="form-control mb-2" name="conteudo" placeholder="Escreva um coment치rio..." required></textarea>
                        <button class="btn btn-sm btn-primary">Comentar</button>
                    </form>
                <% } %>

                <!-- Lista de coment치rios -->
                <% post.comentarios.forEach(c => { %>
                    <div class="card mb-2 p-2">

                        <div class="d-flex align-items-center mb-1">
                            <img src="/img/default.png" class="rounded-circle me-2" width="32" height="32">
                            <strong>@<%= c.usuario.nome_usuario %></strong>
                        </div>

                        <p class="mb-1"><%= c.conteudo %></p>
                        <small class="text-muted"><%= c.createdAt.toLocaleString() %></small>

                        <!-- Bot칫es editar/apagar coment치rio -->
                        <% if (usuarioLogado && usuarioLogado.idUsuario === c.comentUsua) { %>

                            <div class="mt-2">

                                <!-- Editar -->
                                <form action="/comentarios/atualizar/<%= c.idComentario %>" method="POST" class="mb-1">
                                    <input type="password" name="senha" class="form-control mb-2" placeholder="Digite sua senha">
                                    <textarea name="conteudo" class="form-control mb-2"><%= c.conteudo %></textarea>
                                    <button class="btn btn-sm btn-warning">Atualizar</button>
                                </form>

                                <!-- Excluir -->
                                <form action="/comentarios/excluir/<%= c.idComentario %>" method="POST">
                                    <button class="btn btn-sm btn-danger">Excluir</button>
                                </form>

                            </div>

                        <% } %>

                    </div>
                <% }) %>

            </div>

        </div>

    <% }) %>

</div>

<script>
    function toggleComentarios(id) {
        const box = document.getElementById("comentarios-" + id);
        box.style.display = (box.style.display === "none") ? "block" : "none";
    }
</script>

<%- include('../partials/footer') %>

