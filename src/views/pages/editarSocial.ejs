<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="container editar-social-container">
<div class="card shadow editar-social-card">
    <div class="card-header bg-primary text-white editar-social-header">
        <h4 class="mb-0">Editar Informações Sociais</h4>
    </div>

    <div class="card-body editar-social-body">

    <form action="/usuarios/social/atualizar/<%= usuario.idUsuario %>" method="POST">

        <div class="mb-3">
            <label class="form-label">Relacionamento</label>
            <select class="form-select" name="relacionamento">
                <option value="" <%= !usuario.relacionamento ? "selected" : "" %>>Não informado</option>
                <option value="Solteiro(a)" <%= usuario.relacionamento === "Solteiro(a)" ? "selected" : "" %>>Solteiro(a)</option>
                <option value="Namorando" <%= usuario.relacionamento === "Namorando" ? "selected" : "" %>>Namorando</option>
                <option value="Casado(a)" <%= usuario.relacionamento === "Casado(a)" ? "selected" : "" %>>Casado(a)</option>
                <option value="Complicado" <%= usuario.relacionamento === "Complicado" ? "selected" : "" %>>Complicado</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Aniversário</label>
            <input type="date" class="form-control" name="aniversario" value="<%= usuario.aniversario || '' %>">
        </div>

        <div class="mb-3">
            <label class="form-label">Idade</label>
            <input type="number" class="form-control" name="idade" value="<%= usuario.idade || '' %>" min="1">
        </div>

        <div class="mb-3">
            <label class="form-label">Interesses</label>
            <textarea class="form-control" name="interesses" rows="2"><%= usuario.interesses || '' %></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Hobbies</label>
            <textarea class="form-control" name="hobbies" rows="2"><%= usuario.hobbies || '' %></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Estilo</label>
            <input type="text" class="form-control" name="estilo" value="<%= usuario.estilo || '' %>">
        </div>

        <div class="mb-3">
            <label class="form-label">Animais de Estimação</label>
            <input type="text" class="form-control" name="animaisEstimacao" value="<%= usuario.animaisEstimacao || '' %>">
        </div>

        <div class="mb-3">
            <label class="form-label">Paixões</label>
            <textarea class="form-control" name="paixoes" rows="2"><%= usuario.paixoes || '' %></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Humor</label>
            <input type="text" class="form-control" name="humor" value="<%= usuario.humor || '' %>">
        </div>

        <div class="d-flex justify-content-between editar-social-botoes">
            <a href="/usuarios/social" class="btn btn-secondary">Voltar</a>
            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
        </div>

    </form>

    </div>
    </div>
</div>

<%- include('../partials/footer') %>
