<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="container perfil-container">

    <h2 class="perfil-titulo">
        Perfil de <%= usuario.nome %> (@<%= usuario.nome_usuario %>)
    </h2>

    <% if (typeof error !== "undefined" && error) { %>
    <div class="alert alert-danger mt-3 mb-3">
        <i class="bi bi-exclamation-triangle-fill"></i> <%= error %>
    </div>
    <% } %>

    <% 
       const naoTemSocial =
        !usuario.relacionamento &&
        !usuario.aniversario &&
        !usuario.idade &&
        !usuario.interesses &&
        !usuario.hobbies &&
        !usuario.estilo &&
        !usuario.animaisEstimacao &&
        !usuario.paixoes &&
        !usuario.humor;
    %>

    <% if (naoTemSocial) { %>

        <p class="perfil-vazio"><strong>Este usuário não cadastrou informações pessoais.</strong></p>

    <% } else { %>

        <ul class="list-group perfil-lista">
            <li class="list-group-item"><strong>Relacionamento:</strong> <%= usuario.relacionamento %></li>
            <li class="list-group-item"><strong>Aniversário:</strong> <%= usuario.aniversario || "-" %></li>
            <li class="list-group-item"><strong>Idade:</strong> <%= usuario.idade || "-" %></li>
            <li class="list-group-item"><strong>Interesses:</strong> <%= usuario.interesses %></li>
            <li class="list-group-item"><strong>Hobbies:</strong> <%= usuario.hobbies %></li>
            <li class="list-group-item"><strong>Estilo:</strong> <%= usuario.estilo %></li>
            <li class="list-group-item"><strong>Animais de Estimação:</strong> <%= usuario.animaisEstimacao %></li>
            <li class="list-group-item"><strong>Paixões:</strong> <%= usuario.paixoes %></li>
            <li class="list-group-item"><strong>Humor:</strong> <%= usuario.humor %></li>
        </ul>

    <% } %>

    <a href="/usuarios" class="btn btn-secondary voltar-btn">Voltar</a>

</div>

<%- include('../partials/footer') %>
