<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="container mt-4 busca-usuario-container">
    <h3>Resultados da busca por "<%= nome %>"</h3>

    <% if (error) { %>
        <p class="busca-usuario-erro"><%= error %></p>
    <% } %>

    <% if (usuarios.length > 0) { %>
        <ul class="list-group mt-3 busca-usuario-lista">
            <% usuarios.forEach(u => { %>
            <li class="list-group-item busca-usuario-item d-flex align-items-center mb-2">
                <img src="/images/perfil.jpg" alt="avatar" width="40" class="rounded-circle me-2">
                <a href="/usuarios/perfil/<%= u.idUsuario %>" class="busca-usuario-nome">
                @<%= u.nome_usuario %></a>
            </li>
            <% }) %>
        </ul>
    
        <% } else { %>
        <p class="busca-usuario-vazio mt-3">Nenhum usu√°rio encontrado.</p>
    <% } %>
</div>

<%- include('../partials/footer') %>
