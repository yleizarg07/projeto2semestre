<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="container mt-4">
    <h3>Resultados da busca por "<%= nome %>"</h3>

    <% if (error) { %>
        <p class="text-danger"><%= error %></p>
    <% } %>

    <% if (usuarios.length > 0) { %>
        <ul class="list-group mt-3">
            <% usuarios.forEach(u => { %>
                <li class="list-group-item d-flex align-items-center mb-2">
                    <img src="/images/perfil.jpg" alt="avatar" width="40" class="rounded-circle me-2">
                    <a href="/usuarios/perfil/<%= u.idUsuario %>" style="font-weight: bold;text-decoration: underline;">@<%= u.nome_usuario %></a>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p class="mt-3">Nenhum usu√°rio encontrado.</p>
    <% } %>
</div>

<%- include('../partials/footer') %>
