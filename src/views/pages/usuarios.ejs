<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="container usuarios-container">

    <div class="usuarios-header text-center">
        <h2 class="fw-bold">Lista de Usuários</h2>
        <p class="text-muted">Veja todos os usuários cadastrados no sistema</p>
        <hr>
    </div>

    <% if (typeof usuarios !== 'undefined' && usuarios.length) { %>

        <div class="list-group shadow-sm rounded-3 usuarios-list">
            <% usuarios.forEach(u => { %>
            <a href="/usuarios/perfil/<%= u.idUsuario %>" class="list-group-item list-group-item-action usuario-item">

            <div class="usuario-data">
                <img 
                    src="/images/perfil.jpg" 
                    width="55" 
                    height="55"
                    class="rounded-circle usuario-foto"
                >
                <div class="usuario-info">
                    <strong class="usuario-nome"><%= u.nome %></strong><br>
                    <span class="usuario-username">@<%= u.nome_usuario %></span>
                </div>

                <div class="usuario-ver ms-auto">
                    <span class="badge bg-primary">Ver perfil</span>
                </div>
            </div>
            </a>
        <% }) %>
    </div>

    <% } else { %>
        <div class="alert alert-warning text-center usuarios-alert">
            Nenhum usuário encontrado.
        </div>
    <% } %>

</div>
<%- include('../partials/footer') %>
