<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="container mt-4" style="max-width:800px;">
<h3>Lista de Usuários</h3>
<% if (typeof usuarios !== 'undefined' && usuarios.length) { %>
<div class="list-group">
<% usuarios.forEach(u => { %>
<a href="/usuarios?nomeUsuario=<%= u.nome_usuario %>" class="list-group-item list-group-item-action d-flex align-items-center">
<img src="images/perfil.jpg" width="44" class="rounded-circle me-3">
<div>
<strong><%= u.nome %></strong><br>
<small class="text-muted">@<%= u.nome_usuario %></small>
</div>
</a>
<% }) %>
</div>
<% } else { %>
<p>Nenhum usuário encontrado.</p>
<% } %>
</div>

<%- include('../partials/footer') %>