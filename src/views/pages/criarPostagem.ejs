<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="container post-container">
    <h3 class="post-titulo">Criar nova postagem</h3>

    <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <form action="/posts/criar" method="POST" class="post-form">

        <div class="mb-3">
            <label for="titulo" class="form-label">Título</label>
            <input type="text" name="titulo" id="titulo" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="conteudo" class="form-label">Conteúdo</label>
            <textarea name="conteudo" id="conteudo" class="form-control post-textarea" rows="5" required></textarea>
        </div>

        <div class="mb-3">
            <label for="categoria" class="form-label">Categoria</label>
            <input type="text" name="categoria" id="categoria" class="form-control">
        </div>

        <button type="submit" class="btn btn-success post-botao">Publicar</button>
        <a href="/posts" class="btn btn-secondary post-cancelar">Cancelar</a>
    </form>
</div>

<%- include('../partials/footer') %>
